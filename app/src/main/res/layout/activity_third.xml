<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ko2ic.sample.ui.activities.ThirdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/clear_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent.FLAG_ACTIVITY_CLEAR_TOP or Intent.FLAG_ACTIVITY_NEW_TASK" />

        <Button
            android:id="@+id/clear_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent.FLAG_ACTIVITY_CLEAR_TASK or Intent.FLAG_ACTIVITY_NEW_TASK" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
